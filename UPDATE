UPDATE carros
SET preco = 499000.00
WHERE marca = 'Toyota' AND modelo = 'Supra MK4';

UPDATE carros
SET cor = 'Vermelho'
WHERE marca = 'Ford' AND modelo = 'Mustang V8';

UPDATE carros
SET ano = 2024
WHERE marca = 'Fiat' AND modelo = 'Toro';


/* NOVOS UPDATES*/

SET SQL_SAFE_UPDATES = 0;

SELECT * FROM carros;

UPDATE carros
SET cor = 'Branco'
WHERE cor = 'Branca';

UPDATE carros
SET cor = 'Vermelho'
WHERE marca = 'Ford' AND modelo = 'Mustang V8';

UPDATE carros JOIN (
  SELECT id_carros
  FROM carros
  ORDER BY preco ASC
  LIMIT 7
) AS mais_baratos ON carros.id_carros = mais_baratos.id_carros
SET carros.condicao = 'Seminovo';

UPDATE carros JOIN (
  SELECT id_carros
  FROM carros
  ORDER BY preco ASC
  LIMIT 7
) AS mais_baratos ON carros.id_carros = mais_baratos.id_carros
SET carros.condicao = 'Novo';

SELECT * FROM carros;

UPDATE funcionarios f
JOIN loja l ON l.id_loja = 1
SET f.cargo = 'Vendedor SÃªnior'
WHERE f.cargo = 'Vendedor';

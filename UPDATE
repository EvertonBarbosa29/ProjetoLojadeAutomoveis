
SET SQL_SAFE_UPDATES = 0;

UPDATE carros
SET cor = 'Branca'
WHERE cor = 'Branco';

UPDATE carros
SET cor = 'Vermelho'
WHERE marca = 'Ford' AND modelo = 'Mustang V8';

UPDATE carros
SET preco = preco * 1.08
WHERE tipo_combustivel = 'Diesel';

UPDATE funcionarios
SET cargo = 'Vendedor SÃªnior'
WHERE cargo = 'Vendedor' AND id_funcionarios = 23;

UPDATE carros
SET condicao = 'Luxo'
WHERE preco > 750000;

UPDATE carros
SET condicao = 'Antigo'
WHERE ano < 2020;

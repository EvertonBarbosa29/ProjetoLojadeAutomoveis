/*VIEW*/

CREATE VIEW v_carros_disponiveis AS
SELECT * FROM carros;

CREATE VIEW v_carros_toyota AS
SELECT * FROM carros
WHERE marca = 'Toyota';

CREATE VIEW v_carros_hyundai AS
SELECT * FROM carros
WHERE marca = 'Hyundai';

CREATE VIEW v_carros_ford AS
SELECT * FROM carros
WHERE marca = 'Ford';

CREATE VIEW v_carros_chevrolet AS
SELECT * FROM carros
WHERE marca = 'Chevrolet';

CREATE VIEW v_carros_volkswagen AS
SELECT * FROM carros
WHERE marca = 'Volkswagen';

CREATE VIEW v_carros_bmw AS
SELECT * FROM carros
WHERE marca = 'BMW';

CREATE VIEW v_carros_fiat AS
SELECT * FROM carros
WHERE marca = 'Fiat';

CREATE VIEW v_carros_caros AS
SELECT * FROM carros
WHERE preco >150000;

CREATE VIEW v_carros_2025 AS
SELECT * FROM carros
WHERE ano = 2025;

CREATE VIEW v_funcionarios_cargos AS
SELECT nome, cargo FROM funcionarios;

DROP VIEW IF EXISTS v_carros_valor_medio;

CREATE VIEW v_carros_valor_medio_nova AS
SELECT * FROM carros
WHERE preco BETWEEN 50000 AND 150000;


CREATE VIEW
